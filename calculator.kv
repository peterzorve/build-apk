Screen_Manger:
    name: "name_screen_manager"
    HomePage 

<HomePage>:
    name: "name_homepage"
    id_login_username: id_login_username
    id_login_password: id_login_password
    CoverImage:
        source: "background/image4.jpg"
        canvas:
            Color:
                rgba: 0, 0, 0, .7
            Rectangle:
                pos: self.pos
                size: self.size
    MDCard:
        size_hint_max_x: dp(350)
        size_hint: 0.8, 0.8 
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 20
        spacing: 20 
        orientation: "vertical"
        MDLabel:
            text: "Asigbey High School"           
            halign: "center"
            size_hint_y: None 
            size:  self.texture_size
            height: self.texture_size[1]
        MDTextField:
            id: id_login_username
            hint_text: "Username"
            icon_left: "account"
            size_hint_x: None 
            width: 200
            font_size: 14
            pos_hint: {"center_x": 0.5}
        MDTextField:
            id: id_login_password  
            hint_text: "Password"
            icon_left: "eye-off"
            size_hint_x: None 
            width: 200
            font_size: 14
            pos_hint: {"center_x": 0.5}
            password: True 
        MDRaisedButton:
            text: "L o g i n"
            pos_hint: {'center_x':0.5}
            size_hint_x: 0.6
            # on_release: root.login() 
        MDRaisedButton:
            text: "Forgot password"
            pos_hint: {'center_x':0.5}
            size_hint_x: 0.4

        Widget:
            size_hint_y: None 
            height: 20

<CoverImage@CoverBehavior+Image>:
    reference_size: self.texture_size